@model DailyAww.Models.Person

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            @if (Model.Id == 0)
            {
                <h3>Add new Person</h3>
            }
            else
            {
                <h3>Edit Person</h3>
            }
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr/>
            @using (Html.BeginForm("Save", "People", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    @Html.EditorFor(x => x.Name, new { htmlAttributes = new { placeholder = "Person Name", @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(x => x.EmailAddress, new { htmlAttributes = new { placeholder = "E-Mail Address", @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.EmailAddress, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary">
                    Submit
                </button>
                @Html.ActionLink("Cancel", "Index", "People", new { @class = "btn btn-default" })
            }
        </div>
    </div>
</div>





